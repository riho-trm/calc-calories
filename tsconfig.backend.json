{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/backend/types/*"]
    },
    "typeRoots": ["src/backend/@types", "node_modules/@types"]
  },
  "include": ["src/backend/**/*.ts"],
  "exclude": ["node_modules"]
}
